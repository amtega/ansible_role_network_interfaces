{{ ansible_managed | comment }}

DEVICE={{ item.logicalname }}
NAME="{{ item.logicalname }}"
TYPE=Ethernet
ONBOOT=yes
NM_CONTROLLED=no
BOOTPROTO=static
HWADDR={{ item.macaddress }}
IPADDR={{ item.ipv4[0].ipaddr }}
PREFIX={{ item.ipv4[0].cidr }}
MTU={{ item.mtu }} # Si se va a configurar una distinta del est√°ndar ethernet
IPV4_FAILURE_FATAL=yes
IPV6INIT=no
